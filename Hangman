#type the topic of the word you want
Topic = ""
#the word you want people to guess goes here
HangmanWord = ""

alphabet = {'a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z'}

#changes HangmanWord to array
word = []
spaces = 0;
for char in HangmanWord:
  if(char == " "):
    spaces += 1
  word.append(char.upper())

#creates an array to change all the letters to "_"
hiddenword = []
for i in range(len(word)):
  if(word[i] == " "):
    hiddenword.append(" ")
  else:
    hiddenword.append("_")

#checks the length of the word excluding spaces
end = len(word) - spaces;

#creates the man and count is how many you guesses you got wrong
def man(count):
  print('|â€¾â€¾â€¾â€¾â€¾T')
  if(count == 0):
    print("|")
    print("|")
    print("|")
  if(count == 1):
    print('|    ðŸ˜Ÿ')
    print("|")
    print("|")
  if(count == 2):
    print('|    ðŸ˜Ÿ')
    print('|     |')
    print("|")
  if(count == 3):
    print('|    ðŸ˜Ÿ')
    print('|    /|')
    print("|")
  if(count == 4):
    print('|    ðŸ˜Ÿ')
    print('|    /|\\')
    print("|")
  if(count == 5):
    print('|    ðŸ˜Ÿ')
    print('|    /|\\')
    print('|    /')
  if(count >= 6):
    print('|    ðŸ˜Ÿ')
    print('|    /|\\')
    print('|    / \\')
  print("â”´")


def game():
  #c is the amount of correct guesses
  c = 0
  #mancount is the amount of wrong guesses
  mancount = 0;
  #keeps track of used letters
  used = []
  while(c < end+1):
    print(" ")
    print("Topic: " + Topic.upper())
    man(mancount)
    print(" ".join(hiddenword))
    print("Used Letters: " + ', '.join(used))
    key = input()

    #stops the game
    if(key.upper() == "STOP"):
      break

    #checks if it is a letter and only one letter
    if(len(key) == 1 and key.lower() in alphabet):
      #checks if it is in the word and if it is used
      #then replaces the "_" with the correct guessed letter
      if(key.upper() in word and (key.upper() in used) == False ):
        for i in range(len(word)):
          if(word[i] == key.upper()):
            hiddenword[i] = key.upper()
            c += 1
      #if it is not in the word, the man increases and checks letter is already used
      elif((key.upper() in word) == False and (key.upper() in used) == False):
        mancount = mancount + 1

      #checks letter is already used and if not, it adds to used list
      if((key.upper() in used) == False):
        used.append(key.upper())
      #else tells you that the letter is already used and choose a different one
      else:
        print(" ")
        print("Letter already used, select a new letter")
        print(" ")
        continue

      #if the person is fully printed, then the game is over and lost
      if(mancount >= 6):
        man(mancount)
        print(" ")
        print("Game over! The word was " + HangmanWord.upper())
        break
      #if the amount of characters that are correct is equal to the length of word, then you win and its over
      if (c == end):
        print(" ")
        print(" ".join(hiddenword))
        print("You guessed the correct word!")
        break

    #if not one letter or a letter, then it will tell you wrong input
    else:
      print("Invalid input. Please insert one letter.")


game()
